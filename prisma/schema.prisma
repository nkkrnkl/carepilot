// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LabReport {
  id           String   @id @default(cuid())
  userId       String   // assume auth later; for now default "demo-user"
  title        String   // e.g., "CBC Panel â€” Cleveland Clinic"
  date         DateTime
  hospital     String?
  doctor       String?
  fileUrl      String?  // where the uploaded file lives (if persisted)
  rawExtract   String   @default("{}") // full JSON from OpenAI before normalization (stored as JSON string)
  parameters   String   @default("{}") // { [paramName]: { value: number|string, unit?: string, referenceRange?: string } } (stored as JSON string)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId, date])
}
